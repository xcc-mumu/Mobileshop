<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/fl_main_navigation"></FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ib_home"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:src="@mipmap/tab_item_home_normal"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ib_category"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:src="@mipmap/tab_item_category_normal"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ib_cart"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:src="@mipmap/tab_item_cart_normal"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ib_personal"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:src="@mipmap/tab_item_personal_normal"/>

    </LinearLayout>

</LinearLayout>